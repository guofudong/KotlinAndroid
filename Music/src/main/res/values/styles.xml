<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/music_colorPrimary</item>
        <item name="colorPrimaryDark">@color/music_colorPrimaryDark</item>
        <item name="colorAccent">@color/music_colorAccent</item>
    </style>

    <style name="styleMusicHead" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:background">@drawable/music_sp_item_bg</item>
        <item name="android:translationZ" tools:ignore="NewApi">@dimen/dp_2</item>
    </style>

    <style name="styleMusicHeadText" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/sp_12</item>

    </style>

    <style name="styleMvDetailTvTitle" tools:ignore="ResourceName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="styleSongListHead" tools:ignore="ResourceName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="styleMvDetailTopItem" tools:ignore="ResourceName">
        <item name="android:layout_width">@dimen/dp_22</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="music_styleRadioCategoryTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>
